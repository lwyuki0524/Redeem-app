<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingTop="5dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:elevation="2dp"
        android:gravity="center"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:id="@+id/check_activity_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/content_main_white_title"
            android:orientation="vertical">

            <TextView
                android:id="@+id/act_firm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:gravity="start|center_vertical"
                android:letterSpacing="0.3"
                android:paddingStart="15dp"
                android:paddingTop="5dp"
                android:paddingEnd="15dp"
                android:paddingBottom="5dp"
                android:text="xx公司"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp">
                <!--                android:gravity="center"-->
                <!--                android:orientation="horizontal"-->

                <TextView
                    android:id="@+id/act_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="活動名稱: "
                    android:textColor="#888383"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/act_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/act_name_title"
                    android:gravity="center|center_vertical"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="XXX" />

            </RelativeLayout>


            <TextView
                android:id="@+id/act_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:gravity="start|center_vertical"
                android:letterSpacing="0.3"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="地點：xxx"
                android:textSize="12sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/content_main_bluecard_end"
                android:elevation="2dp"
                android:gravity="right|center_vertical"
                android:letterSpacing="0.3"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="點擊查看>>"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>