<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/list_accounting_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        android:visibility="visible"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:columnCount="4"
            android:padding="10dp"
            android:rowCount="3">

            <TextView
                android:id="@+id/types"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_gravity="right"
                android:padding="5dp"
                android:text="收入"
                android:textColor="#666363" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnSpan="4"
                android:background="?android:attr/listDivider"
                android:elevation="2dp" />

            <TextView
                android:id="@+id/goodsOrActivity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:text="賣出商品"
                android:textColor="#666363"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/goodsOrActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:maxWidth="150dp"
                android:text="XXX"
                android:textColor="#666363"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:text="交易對象"
                android:textColor="#666363"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tradeTargetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:maxWidth="150dp"
                android:text="會員XXX"
                android:textColor="#666363"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_rowSpan="2"
                android:layout_column="3"
                android:layout_gravity="center|right"
                android:maxWidth="100dp"
                android:text="+100"
                android:textColor="@android:color/holo_red_light"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:text="2019/10/15"
                android:textColor="#666363"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_row="1"
                android:layout_rowSpan="2"
                android:layout_column="0"
                android:layout_gravity="center"

                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/pic_coffee" />
        </GridLayout>
<!--        android:padding="5dp"-->
    </androidx.cardview.widget.CardView>

</LinearLayout>