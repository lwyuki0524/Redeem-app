<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 按壓時 -->
    <item android:state_pressed="true">
        <!--rectangle 長方形 可以畫出直角形，圓角形，弧形等-->
    <!-- <shape android:shape="rectangle"  >-->
        <!-- <corners android:radius="15dp" />-->
        <!-- <solid android:color="#817cc3"/>-->
    <!-- </shape>-->

        <layer-list>
            <item android:left="3dp" android:top="3dp">
                <shape>
                    <corners android:radius="4dp" />
                    <solid android:color="#3A3737" />
                </shape>
            </item>
            <item android:top="1.5dp" android:left="1.5dp">
                <shape>
                    <gradient android:angle="270"
                        android:endColor="#817cc3" android:startColor="#817cc3" />
                    <stroke android:width="1dp" android:color="#645272" />
                    <corners android:radius="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>

